@model ErrorViewModel
@{
    ViewData["Title"] = "We've got some trouble";
}

<div class="container"><br />
    <div class="row">
    	<div class="col-md-12">
            <div class="alert alert-danger">
                <strong>We've got some trouble.</strong> @ViewBag.ErrorMessage
                <p>Please contact Admin for further info.</p>
            </div>
            <div align="center">
                Or back to <a asp-area="" asp-controller="Execute" asp-action="Index">HOME</a> page instead.
            </div>
        </div>
    </div>
</div>