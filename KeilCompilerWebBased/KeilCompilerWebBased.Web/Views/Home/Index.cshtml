@{
    ViewData["Title"] = "Home Page";
}

<h2>Upload .uvproj File</h2>
<form method="post" enctype="multipart/form-data" asp-action="UploadUVProjectFile" asp-controller="UploadFiles" >
    <input type="file" name="uvprojFile" />
    <input type="submit" value="Upload" />
</form>

<h2>Upload Source File</h2>
<form method="post" enctype="multipart/form-data" asp-controller="UploadFiles" asp-action="UploadSourceFiles">
    <div class="form-group">
        <div class="col-md-10">
            <p>Upload one or more files using this form:</p>
            <input type="file" name="files" multiple />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            <input type="submit" value="Upload" />
        </div>
    </div>
</form>    

